{
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "regions": ["hnd1"]
    },
    "pages/api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "regions": ["hnd1"]
    },
    "app/**/route.{js,ts}": {
      "regions": ["hnd1"]
    }
  }
}

